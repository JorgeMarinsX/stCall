# Application Environment
NODE_ENV=development

# Server Configuration
HOST=0.0.0.0
PORT=3000

# Asterisk Configuration
# Update these values to match your Asterisk PBX setup
ASTERISK_HOST=
ASTERISK_AMI_PORT=5038
ASTERISK_ARI_PORT=8088
ASTERISK_WS_PORT=8088

# Asterisk Credentials (ARI)
# Configure these in ari.conf [stcall] section
ASTERISK_USERNAME=
ASTERISK_PASSWORD=

# API Configuration
API_BASE_URL=http://localhost:3000/api

# WebRTC Configuration
# WebSocket Secure URL for SIP.js (PJSIP WebRTC transport)
# Format: wss://yourdomain.com:8089/ws
WEBRTC_WSS_URL=
# SIP Domain (same as Asterisk domain)
WEBRTC_DOMAIN=
# STUN Server for NAT traversal (optional, defaults to Google's STUN)
WEBRTC_STUN_SERVER=stun:stun.l.google.com:19302
# TURN Server for NAT traversal (optional, for symmetric NAT)
WEBRTC_TURN_SERVER=
WEBRTC_TURN_USERNAME=
WEBRTC_TURN_PASSWORD=

# Development
CHOKIDAR_USEPOLLING=true
